<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainMenu"
    android:id="@+id/relLayMenu">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08x08 Level"
        android:id="@+id/but08x08"
        android:layout_below="@+id/textChooseLevel"
        android:layout_alignLeft="@+id/but14x14"
        android:layout_alignStart="@+id/but14x14"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12x12 Level"
        android:id="@+id/but12x12"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/but08x08"
        android:layout_alignLeft="@+id/but08x08"
        android:layout_alignStart="@+id/but08x08" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14x14 Level"
        android:id="@+id/but14x14"
        android:layout_below="@+id/but12x12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose a level size:"
        android:id="@+id/textChooseLevel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
